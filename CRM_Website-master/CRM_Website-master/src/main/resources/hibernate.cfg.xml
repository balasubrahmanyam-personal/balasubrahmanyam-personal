        <!--        <mapping class="org.example.Answer"></mapping>-->
        <!--        <mapping class="ManyToMany.Emp"></mapping>-->
        <!--        <mapping class="ManyToMany.Project"></mapping>-->

        <mapping class="Pojos.Customer"></mapping>
        <mapping class="Pojos.Employee"></mapping>
